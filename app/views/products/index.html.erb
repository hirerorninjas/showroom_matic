<%#= console %>
<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:image) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:quantity) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if user_signed_in? && current_user.admin? %>
      <th><%= model_class.human_attribute_name(:action) %></th>
      <% end %>
      <% if user_signed_in? && current_user.dealer? %>
      <th><%= model_class.human_attribute_name(:deal) %></th>
      <% end %>
      <th><%= model_class.human_attribute_name(:social_share) %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to(image_tag product.photo.url(:small)) %></td>
        <td><%= product.price %></td>
        <td><%= product.quantity %></td>
        <td><%=l product.created_at %></td>

        <td>
        <% if user_signed_in? && current_user.admin? %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
        <td>
        <% if user_signed_in? && current_user.dealer? %>
          <% if product.id != product.likes.collect(&:product_id).last.to_i %>
          <div id ="like_btn"><%= link_to "Deal", all_likes_path(product.id) , method: :post, remote: true, :class => 'btn btn-mini' %></div>
          <% else %>
            <div id ="unlike_btn"><%= link_to "Not Deal", unlike_likes_path(product.id) , method: :post, remote: true , :class => 'btn btn-mini'%></div>
          <% end %>
          <% end %>
        </td>
        <td><div class="fb-like" data-href="https://mysterious-wildwood-8925.herokuapp.com" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @products %>

<script>
$(document).ready(function(){
  $("#like_btn").click(function(){
 window.location.reload();
  });
  $("#unlike_btn").click(function(){
 window.location.reload();
  });
});
</script>

