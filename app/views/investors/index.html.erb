<h1>Listing investors</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Equity investment</th>
      <th>Revenue</th>
      <th>Ebitda</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investors.each do |investor| %>
      <tr>
        <td><%= investor.Company %></td>
        <td><%= investor.Equity_Investment %></td>
        <td><%= investor.Revenue %></td>
        <td><%= investor.EBITDA %></td>
        <td><%= link_to 'Show', investor %></td>
        <td><%= link_to 'Edit', edit_investor_path(investor) %></td>
        <td><%= link_to 'Destroy', investor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

